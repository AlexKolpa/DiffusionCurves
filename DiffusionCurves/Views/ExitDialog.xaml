<Window x:Class="DiffusionCurves.Views.ExitDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ExitDialog" Height="150" Width="350" Background="#FF393939" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Icon="DC_icon.ico">
    <StackPanel Orientation="Vertical">

        <StackPanel VerticalAlignment="Top" Margin="15,15" Orientation="Vertical">
            <Label Content="Are you sure you want to quit?" Foreground="White"/>
            <Label Content="Any work that is unsaved will be saved." Foreground="White"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="300">
            <Button Name="Cancel" Content="cancel." Style="{StaticResource Standard}" Click="Cancel_Click" Width="100" Height="23"/>
            <Button Name="DontSave" Content="don&apos;t save." Style="{StaticResource Standard}" Width="100" Click="DontSave_Click" Height="23" Margin="29,0"/>
            <Button Name="Save" Content="save." Style="{StaticResource Standard}" Width="100" Click="Save_Click" Height="23" Margin="-30,0"/>
        </StackPanel>

    </StackPanel>
</Window>

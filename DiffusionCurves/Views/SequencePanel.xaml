<src:TimeLinePanel x:Class="DiffusionCurves.SequencePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:src="clr-namespace:DiffusionCurves.Views"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300" Height="150">
    
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" VerticalAlignment="Stretch">
        
        <StackPanel Name="Panel" Orientation="Horizontal" Height="150" HorizontalAlignment="Center">
            
            <StackPanel Height="20" Width="200" VerticalAlignment="Center" HorizontalAlignment="Center" >
                
                <StackPanel Height="20" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center" >
                    <Label Name="AddImages" Content="Add images: FILE->Import Image(s)" Foreground="#FFB4B4B4" />
                </StackPanel>
                
            </StackPanel>
            
        </StackPanel>
        
    </ScrollViewer>
    
</src:TimeLinePanel>